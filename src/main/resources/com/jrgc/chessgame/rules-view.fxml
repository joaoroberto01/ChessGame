<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.jrgc.chessgame.controllers.RulesController">
    <padding>
        <Insets topRightBottomLeft="20" />
    </padding>

    <top>
        <Text fx:id="titleLabel" BorderPane.alignment="CENTER" style="-fx-font-size: 11pt; -fx-font-weight: bold" />
    </top>

    <center>
        <Text fx:id="rulesLabel" />
    </center>

    <bottom>
        <Button text="Entendi" BorderPane.alignment="CENTER" onAction="#onCloseClick"/>
    </bottom>

    <stylesheets>
        <URL value="@styles/dialog.css"/>
    </stylesheets>
</BorderPane>
